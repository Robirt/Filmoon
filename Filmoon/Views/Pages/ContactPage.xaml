<Page
    x:Class="Filmoon.Views.Pages.ContactPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    mc:Ignorable="d" 
    d:DesignWidth="1920"
    d:DesignHeight="1030"
    Title="Contact">
    <Page.Resources>
        <ResourceDictionary Source="../../ResourceDictionaries/Pages/ContactPageDictionary.xaml"/>
    </Page.Resources>
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel Height="300" Width="400">
            <StackPanel>
                <Label Style="{StaticResource ResourceKey=Header}">Kontakt</Label>
            </StackPanel>
            <StackPanel>
                <TextBlock>
                    Masz jakieś pytania? 
                    Nie wahaj się. Zadzwoń lub wyślij maila. Jesteśmy dostępni dla Was  
                    Pn-Pt 10-18 oraz Soboty 10-15.
                </TextBlock>
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <Label>Numer telefonu: 777-234-111</Label>
                <Label>Adres: Leszczyńska 44/46 44-100 Warszawa</Label>
                <Label>Email: filmoon@gmail.com</Label>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
